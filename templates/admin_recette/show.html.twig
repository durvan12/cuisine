{% extends 'base.Admin.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ recette.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ recette.content }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td><img src="{{ asset('img/recettes/' ~ recette.img) }}" alt=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_recette_index') }}">Retour A la Liste</a>

    <a href="{{ path('admin_recette_edit', {'id': recette.id}) }}">Modifier</a>

    {{ include('admin_recette/_delete_form.html.twig') }}
{% endblock %}
